{
  "manifest_version": 3,
  "name": "SuperCopy for ChatGPT",
  "version": "1.0",
  "description": "Duplicates the copy button on ChatGPT pages",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["turndown.min.js", "content.js"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 